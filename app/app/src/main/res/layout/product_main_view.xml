<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_card_cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:background="@android:color/transparent"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/product_card_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/less_rounded_white_square"
            android:contentDescription="@string/product_image_description"
            android:src="@drawable/inventory_fill0_24"
            app:tint="@color/dark_grey"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/name_product_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:textStyle="bold"
            tools:text="TextView" />

        <TextView
            android:id="@+id/price_product_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="110dp"
            tools:text="TextView" />

        <TextView
            android:id="@+id/weight_product_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="130dp"
            android:textStyle="italic"
            tools:text="TextView" />

        <TextView
            android:id="@+id/shop_name_product_card_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="150dp"
            android:textStyle="italic"
            tools:text="TextView" />
    </androidx.cardview.widget.CardView>
</FrameLayout>